[databases]
* = host=${DB_HOST} port=${DB_PORT}

[pgbouncer]
ignore_startup_parameters = extra_float_digits,binary_parameters
listen_port = ${LISTEN_PORT}
listen_addr = 0.0.0.0
auth_type = plain
auth_file = /etc/pgbouncer/userlist.txt
admin_users = ${DB_USER}
stats_users = ${DB_USER}
pool_mode = session
max_client_conn = 10000
default_pool_size = 400
min_pool_size = 50
