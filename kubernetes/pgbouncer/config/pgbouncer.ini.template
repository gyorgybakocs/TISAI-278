[databases]
* = host=${DB_HOST} port=${DB_PORT}

[pgbouncer]
listen_port = ${LISTEN_PORT}
listen_addr = 0.0.0.0
auth_type = scram-sha-256
auth_file = /etc/pgbouncer/userlist.txt
admin_users = ${DB_USER}
stats_users = ${DB_USER}
pool_mode = session
max_client_conn = 1000
default_pool_size = 20
min_pool_size = 5
